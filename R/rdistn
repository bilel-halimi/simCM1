rdistn <- function(x,p,n)
{
  i=1
  y=c(i : n-1,1)
  for (i in 1:n){
    y[i]=rdist(x,p)
    i=i+1
  }
  return(y)
}
Affn<- function (x,p,n){
  m =rdistn(x,p,n)
  plot(m,col="green", main = "le nuage de point ")

}
AffBox<-function(x,p,n){
  m=rdistn(x,n,p)
  boxplot(m)
}
Moy<- function (x,p,n){
  m= mean(rdistn(x,p,n))
  return(m)
}
Vari <- function(x,p,n){
  m= var(rdistn(x,p,n))
  return(m)
}

